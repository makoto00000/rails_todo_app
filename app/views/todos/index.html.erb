<div class="container">
  <h1>Todo List</h1>

  <%= link_to "タスクを追加する", new_todo_path, class: 'new-task' %>

  <table>
    <thead>
      <tr>
        <th>タスク</th>
        <th>アクション</th>
      </tr>
    </thead>
    <tbody>

      <% @todos.each do |todo| %>
        <tr>
          <td><%= todo.title %></td>
          <td>
            <%= link_to "編集", edit_todo_path(todo), class: 'edit' %>
            <%= link_to "削除", todo, class: 'delete', data: { "turbo-method": :delete, turbo_confirm: "本当に削除していいですか?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>